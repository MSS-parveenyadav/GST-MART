@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_Container.cshtml";
}
@using (Html.BeginForm("RecoverPassword", "User", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container-fluid">
        <div class="tab-content">
            <div class="tab-pane active" id="home">
                <div class=" col-lg-12 sec-login">
                    <h1>Recover Password <span class="glyphicon glyphicon-question-sign"></span></h1>
                </div>
                <div class="sec-login-form">
                    <div class="col-lg-12">
                        <p id="ErrorMessage" style="color: red; font: 14px arial"></p>
                        <p id="SuccessMessage" style="color: green; font: 14px arial"></p>
                    </div>
                    <div class="col-lg-12 sec-login-form-iiner">
                        <div style="color:green;font:14px arial" align="center">

                            @TempData["Loginsuccess"]
                        </div>
                        <div style="color:red;font:14px arial" align="center">

                            @TempData["Loginerror"]
                        </div>
                        <div class="col-lg-12">
                            <div class="col-xs-12">
                                <label>Email :</label>
                                @Html.TextBox("Email", "", new { @class = "form-control" })
                            </div>
                            <div class="btn1">
                                <input name="" type="submit" value="Submit">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

