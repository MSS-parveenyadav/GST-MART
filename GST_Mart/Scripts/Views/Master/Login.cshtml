@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Container.cshtml";
}

@using (Html.BeginForm())
{
    <body>
        <fieldset>

            <div class="container-fluid">
                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <div class=" col-lg-12 sec-login">
                            <h1>Master Login <span class="glyphicon glyphicon-question-sign"></span></h1>
                        </div>
                        <div class="sec-login-form">
                            <div class="col-lg-12 sec-login-form-iiner">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <p style="color:green">@ViewData["Sucess"]</p>
                                        <p style="color:red">@ViewData["Error"]</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        @Html.Label("lblusername", "Enter Username")
                                        @Html.TextBox("Username", ViewData["Username"] ?? "", new { @class = "form-control", @onkeypress = "return IsSpecialcharacter(event)" })
                                    </div>
                                    <div class="col-xs-6">
                                        @Html.Label("lblpassword", "Enter Password")
                                        @Html.Password("Password", "", new { @class = "form-control" })
                                    </div>
                                    <div class="btn1">
                                        <input type="submit" value="Login" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>
    </body>

}

<script>

    //for cheq user name special char
    var specialKeys = new Array();
    specialKeys.push(8);
    specialKeys.push(9);



    function IsSpecialcharacter(e) {
        var keyCode = e.which ? e.which : e.keyCode
        var ret = (keyCode >= 33 && keyCode <= 48 || keyCode >= 58 && keyCode <= 64 || keyCode >= 91 && keyCode <= 96 || keyCode > 123);

        if (ret == true) {
            return false;
        }
        else {
            return true;
        }
        return ret;
    }




    $(function () {

        $("#Username").bind('paste', function () {
            setTimeout(function () {
                //get the value of the input text
                var data = $('#Username').val();
                //replace the special characters to ''
                var dataFull = data.replace(/[^\w\s]/gi, '');
                //set the new value of the input text without special characters
                $('#Username').val(dataFull);
            });

        });
    });
</script>

</html>






