@model GST_BLL.DTO.UserModel

@{
    ViewBag.Title = "SecureLogin";
    Layout = "~/Views/Shared/_Container.cshtml";
}

<div class="container-fluid">
    <div class="tab-content">
        <div class="tab-pane active" id="home">
            <div class=" col-lg-12 sec-login">
                <h1>Secure Login <span class="glyphicon glyphicon-question-sign"></span></h1>
            </div>
            <div class="sec-login-form">
                <div class="col-lg-12 sec-login-form-iiner">
                    <div class="row">
                        <div class="col-xs-12">
                            <label>Company ID :</label>
                            <select name="text" class="form-control">
                                <option>Select One</option>
                                <option>Select One</option>
                                <option>Select One</option>
                                <option>Select One</option>
                                <option>Select One</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <label>User ID :</label>
                            <><input id="txtuserId" type="text" class="form-control" />
                        </div>
                        <div class="col-xs-6">
                            <label>Password :</label>
                            <input id="txtpassword" type="text" class="form-control" />
                        </div>
                        <div class="btn1">
                            <input name="" type="button" value="Login">
                        </div>
                    </div>
                </div>
                <div class="rest-pass">
                    <input name="btnResetPassword" type="button" value="Reset Password" onclick="ResetPassword();" class="btn btn-link">
                    <p>Your IP Address ; 66.249.66.188 <i><img src="/Content/images/green.png" alt="#"></i></p>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="profile">
            <div class=" col-lg-12 sec-login">
                <h1>Security Code Access <span class="glyphicon glyphicon-question-sign"></span></h1>
            </div>
            <div class="security">
                <form action="" method="get">
                    <div class="col-xs-8 security-form">
                        <label>Security Code:</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class=" btn2">
                        <input name="" type="button" value="enter">
                    </div>
                </form>
                <div class="rest-pass"> <a href="#">Resend Security Code </a> </div>
            </div>
        </div>
    </div>
</div>
<script>
    function ResetPassword() {
        var UserId = document.getElementById("txtuserId").value;
        var Password = document.getElementById("txtpassword").value;
        debugger
        $.ajax({
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            url: "/User/ResetPassword",
            data: "{'UserId':'" + UserId + "','Password':'" + Password + "'}",
            success: function (response) {
                if (response == "Success") {
                    alert("Link is send to your Email Please Check.");
                }
                else if (response == "failure") {
                    alert("Email password pair does not match try again.")
                }
            },
            error: function (e) {

            }
        });
    }
</script>
