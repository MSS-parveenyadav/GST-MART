
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DeleteData", "Admin", FormMethod.Post, new { id = "submitForm" }))
{


        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <div class=" col-lg-12 sec-login">
                        <h1>Security Code Access <span class="glyphicon glyphicon-question-sign"></span></h1>
                    </div>
                    <div class="security-login-form">
                        <div class="col-lg-12 security-login-form">

                            <div class="row">
                                <div class="col-lg-9">
                                    <h1>Please Enter the Security code sent to your registered email address</h1>
                                    <label>Security Code :</label>
                        
                                   
                                    <input id="SecurityCode" name="SecurityCode" onclick="SubmitForm()" value="" type="text" class="form-control" placeholder="Security Code">
                                    <p id="ValidateSecurityCode" style="color: red">@TempData["CodeError"]</p>
                                </div>

                                <div class="btn2">

                                    <input name=""  type="submit" id="btnClick" value="Enter">
                                </div>
                            </div>
                        </div>
                        <div class="rest-pass2">
                            <a href="/User/DownloadUserData">
                           Resend Security Code</a>
</div>
                    </div>
                </div>

            </div>
        </div>
    

    
    
    
}

<script>

    $("#btnClick").click(function () {
        var SecurityCode = document.getElementById("SecurityCode").value;

        if (SecurityCode == "") {
          
            document.getElementById("ValidateSecurityCode").innerHTML = "Secuirty Code Required.";
            $('#SecurityCode').focus();
            return false
        }
    });

</script>

