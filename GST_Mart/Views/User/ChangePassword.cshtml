@model GST_BLL.DTO.UserModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Container.cshtml";
}
@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>

        <div class="container-fluid">
            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <div class=" col-lg-12 sec-login">
                        <h1>Change Password <span class="glyphicon glyphicon-question-sign"></span></h1>
                    </div>
                    <div class="sec-login-form">
                        <div class="col-lg-12 sec-login-form-iiner">
                            <div class="row">
                                <div class="col-xs-6">
                                    <p style="color:red">@TempData["ErrorMessage"]</p>
                                </div>
                                <div class="col-xs-6">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    @Html.HiddenFor(m=>m.id)
                                    @Html.Label("lblusername", " New Password :")
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                                </div>
                                <div class="col-xs-6">
                                    @Html.Label("lblpassword", "Confirm Password :")
                                    @Html.PasswordFor(model => model.ConfirmPwd, new { @class = "form-control", placeholder = "Re-Enter Password" })
                                </div>
                                <div class="btn1">
                                    <input type="submit" value="Submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </fieldset>

    <script>


    </script>
}
