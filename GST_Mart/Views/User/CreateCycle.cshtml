@model GST_BLL.DTO.CycleModel
@{
    ViewBag.Title = "CreateCycle";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using (Html.BeginForm("CreateCycle", "User", FormMethod.Post, new { enctype = "multipart/form-data",id = "submitForm" }))
{
    <div style="color:Red">
        @TempData["ErrorMessage"] 
    </div>
    <div style="color:green">
        @TempData["SuccessMessage"] 
    </div>
<div class="container-fluid">
    <div class="serch">
        <div class="tab-content">
            <div class="tab-pane active" id="home">
                <div class=" col-lg-12 sec-login">
                    <h1>Create Cycle <span class="glyphicon glyphicon-question-sign"></span></h1>
                </div>

                <form action="" method="get" class="serch">
                    <div id="centre-coloum">
                        <div class="col-md-6">
                            <label>Cycle Description :</label>

                            @Html.TextBoxFor(m => m.Description, new { placeholder = "Description" })
                            <span style="color:red;">@Html.ValidationMessageFor(m => m.Description)</span>
                        </div>
                        <div class="col-md-6">
                            <label>Select System ID :</label>

                            @Html.DropDownList("systemlist", new SelectList(ViewBag.SystemList, "SystemID", "SystemID"))


                        </div>
                    </div>



                </form>

            </div>


        </div>
    </div>

        <div class="tab-content">
            <div class="tab-pane active" id="home">
                <div class=" col-lg-12 sec-login">
                    <h1>Select Data File <span class="glyphicon glyphicon-question-sign"></span></h1>
                </div>


                <div id="centre-coloum">
                    <div class="col-md-6">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data-tabel">
                            <tr>
                                <td> Company :  </td>
                                <td>Account Receivable</td>
                            </tr>
                            <tr>
                                <td>

                                    <input type="file" class="brows-button" onclick="emptyvalidate();" id="financeFile" name="fileUpload" multiple="multiple" />
                                    <p id="Validatemultiple" style="color:red"></p>
                                </td>
                            </tr>
                        </table>

                    </div>




                    <div class="col-md-6">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data-tabel">
                            <tr>
                                <td> Ledger :  </td>
                                <td> </td>
                            </tr>
                            <tr>
                                <td>
                                    <input name="fileUpload" onclick="emptyvalidate();" multiple="multiple" type="file" id="saleFile" />
                                    <p id="ValidatesaleFile" style="color:red"></p>
                                </td>
                            </tr>
                        </table>

                    </div>



                    <div class="col-md-6">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data-tabel">
                            <tr>
                                <td> Supply :  </td>
                                <td> </td>
                            </tr>
                            <tr>
                                <td>

                                    <input name="fileUpload" onclick="emptyvalidate();" multiple="multiple" type="file" id="purchaseFile" />
                                    <p id="ValidatepurchaseFile" style="color:red"></p>
                                </td>
                            </tr>
                        </table>

                    </div>



                    <div class="col-md-6">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data-tabel">
                            <tr>
                                <td> Purchase :  </td>
                                <td> </td>
                            </tr>
                            <tr>
                                <td>

                                    <input name="fileUpload" onclick="emptyvalidate();" multiple="multiple" type="file" id="inventoryFile" />
                                    <p id="ValidateinventoryFile" style="color:red"></p>
                                </td>
                            </tr>
                        </table>

                    </div>


                    <div class="col-md-6">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data-tabel">
                            <tr>
                                <td> Footer :  </td>
                                <td> </td>
                            </tr>
                            <tr>
                                <td>

                                    <input name="fileUpload" onclick="emptyvalidate();" multiple="multiple" type="file" id="humanFile" />
                                    <p id="ValidatehumanFile" style="color:red"></p>

                                </td>
                            </tr>
                        </table>

                    </div>







                    <div class="button">
                        <input type="submit" onclick="SubmitForm()" value="Create" name="">
                    </div>
                </div>





            </div>


        </div>
    

</div>
     <script>

         function emptyvalidate() {
             document.getElementById("Validatemultiple").innerHTML = "";
             document.getElementById("ValidatesaleFile").innerHTML = "";
             document.getElementById("ValidatepurchaseFile").innerHTML = "";
             document.getElementById("ValidateinventoryFile").innerHTML = "";
             document.getElementById("ValidatehumanFile").innerHTML = "";
         }


        function SubmitForm() {
            $('#submitForm').submit(function () {
                document.getElementById("Validatemultiple").innerHTML = "";
                document.getElementById("ValidatesaleFile").innerHTML = "";
                document.getElementById("ValidatepurchaseFile").innerHTML = "";
                document.getElementById("ValidateinventoryFile").innerHTML = "";
                document.getElementById("ValidatehumanFile").innerHTML = "";
                if (Checkvalidation() == false) {
                    return false;
                }
            });
        }

        function Checkvalidation() {
            debugger
            var count = 0;
            var financeFile = document.getElementById("financeFile").value;
            var purchaseFile = document.getElementById("financeFile").value;
            var saleFile = document.getElementById("saleFile").value;
            var inventoryFile = document.getElementById("inventoryFile").value;
            var humanFile = document.getElementById("humanFile").value;


            if (financeFile == "") {
                document.getElementById("Validatemultiple").innerHTML = "Please upload the attachment";
                $('#financeFile').focus();
                count = 1;
            }
            if (purchaseFile == "") {

                document.getElementById("ValidatepurchaseFile").innerHTML = "Please upload the attachment";
                $('#financeFile').focus();
                count = 1;
            }
            if (inventoryFile == "") {

                document.getElementById("ValidateinventoryFile").innerHTML = "Please upload the attachment";
                $('#inventoryFile').focus();
                count = 1;
            }
            if (saleFile == "") {

                document.getElementById("ValidatesaleFile").innerHTML = "Please upload the attachment";
                $('#saleFile').focus();
                count = 1;
            }
            if (humanFile == "") {

                document.getElementById("ValidatehumanFile").innerHTML = "Please upload the attachment";
                $('#humanFile').focus();
                count = 1;
            }
            if (count == 1) {
                return false;
            }
        }

    </script>
}


